generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:root@localhost:3306/todo"
}

model Task {
  id          String   @id @default(uuid())
  title       String
  description String
  status      String   @default("pending")
  dueDate     DateTime
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}

model User {
  id       String @id @default(uuid())
  username String @unique
  password String
  tasks    Task[]
}
